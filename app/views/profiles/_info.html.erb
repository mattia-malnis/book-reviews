<%# locals: (user:) -%>

<div class="bg-white p-6 rounded-lg shadow-md" id="profile-info">
  <div class="w-20 h-20 mx-auto mb-4 bg-blue-300 rounded-full flex items-center justify-center text-2xl font-bold">
    <%= user.nickname.first.upcase %>
  </div>

  <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= user.nickname %></h1>
  <p class="text-sm text-gray-400 mb-4">Member since <%= user.created_at.strftime("%B %Y") %></p>
  <div class="flex flex-col space-y-2">
    <%= link_to "Update profile", edit_user_registration_path, class: "px-4 py-2 text-sm font-medium text-blue-700 bg-blue-100 rounded-md hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition", data: { turbo_frame: "modal" } %>
    <%= link_to "Log out", destroy_user_session_path, class: "px-4 py-2 text-sm font-medium text-blue-700 bg-blue-100 rounded-md hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition", data: { turbo_method: :delete } %>
  </div>
</div>
