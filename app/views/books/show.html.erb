<%= turbo_stream_from @book %>
<div class="bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto px-4 lg:px-6 py-8 lg:py-12">
    <article class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="lg:flex lg:items-start p-6 lg:p-8">
        <section class="book-image lg:flex-shrink-0">
          <%= book_image(@book, "w-auto h-auto rounded shadow-md transition duration-300 hover:shadow-xl") %>
        </section>
        <%= render partial: "book_description", locals: { book: @book } %>
      </div>

      <section class="bg-gray-50 p-6 lg:p-8 mt-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6 pb-2 border-b-2 border-gray-200">Reviews</h2>
        <% if @reviews.any? %>
          <div id="reviews-list" class="space-y-8">
            <%= render partial: "books/reviews/review", collection: @reviews %>
          </div>
          <% if @pagy.pages > 1 %>
            <div class="mt-8">
              <%== pagy_nav(@pagy) %>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-600" id="empty-reviews-message">No reviews yet. Be the first to leave a review!</p>
        <% end %>
      </section>
    </article>
  </div>
</div>
